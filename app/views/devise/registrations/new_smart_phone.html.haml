- set_meta_tags title: t('Sign up'), description: "#{t('site.name')}へ#{t 'Sign up'}するページです。#{t 'Sign up'}すると#{Recruit.model_name.human}へのエントリーなどの機能が使えるようになります！"

.wrapper
  %h1= t("Sign up")
  %p
    #{t 'Sign up'}してもっと便利にスマートに！

  %p= render partial: "devise/shared/social_links", locals: {type: "Sign up"}

  %p.text-center
    または

  .row
    .col-md-4
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        .form-group
          = f.label :email, t("email")
          = f.email_field :email, :autofocus => true, class: 'form-control'
        .form-group
          = f.label :password, t("password")
          = f.password_field :password, class: 'form-control'
        .form-group
          = f.label :password_confirmation, t("password_confirmation")
          = f.password_field :password_confirmation, class: 'form-control'
        %p.text-center= f.submit t("Sign up"), class: 'btn btn-primary'

  - if controller_name != 'sessions'
    すでに#{t"Sign up"}されてますか? ⇒
    = link_to t("Log in"), new_session_path(resource_name)
    %br/
