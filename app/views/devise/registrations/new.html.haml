- add_breadcrumb t('Sign up'), nil
- set_meta_tags title: t('Sign up'), description: "#{t('site.name')}へ#{t 'Sign up'}するページです。"

.col-md-2
.col-md-8

  %h1 Sign up
  %p
    #{t('Sign up')}してもっと便利にスマートに！

  %p= render partial: "devise/shared/social_links", locals: {type: "Sign up"}

  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email, t("email")
      = f.email_field :email, :autofocus => true, class: 'form-control'
    .form-group
      = f.label :password, t("password")
      = f.password_field :password, class: 'form-control'
    .form-group
      = f.label :password_confirmation, t("password_confirmation")
      = f.password_field :password_confirmation, class: 'form-control'
    %p= f.submit t("Sign up"), class: 'btn btn-primary'

  - if controller_name != 'sessions'
    すでに#{t'Sign up'}されてますか? ⇒
    = link_to t("Log in"), new_session_path(resource_name)
    %br/
