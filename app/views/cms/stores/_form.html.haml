= form_for [:cms,@store] do |f|
  - if @store.errors.any?
    #error_explanation
      %h2= "#{pluralize(@store.errors.count, "error")} prohibited this store from being saved:"
      %ul
        - @store.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :enable
    = f.check_box :enable
  .field
    = f.label :pkey
    = f.text_field :pkey, class: "form-control"
  .field
    = f.label :name
    = f.text_field :name, class: "form-control"
  .field
    = f.label :postcode
    = f.text_field :postcode, class: "form-control"
  .field
    = f.label :region
    = f.text_field :region, class: "form-control"
  .field
    = f.label :locality
    = f.text_field :locality, class: "form-control"
  .field
    = f.label :address
    = f.text_field :address, class: "form-control"
  .field
    = f.label :building
    = f.text_field :building, class: "form-control"
  .field
    = f.label :latitude
    = f.text_field :latitude, class: "form-control"
  .field
    = f.label :longitude
    = f.text_field :longitude, class: "form-control"
  .field
    = f.label :gmap_query
    = f.text_field :gmap_query, class: "form-control"
  .field
    = f.label :tel
    = f.text_field :tel, class: "form-control"
  .field
    = f.label :fax
    = f.text_field :fax, class: "form-control"
  .field
    = f.label :opening_time
    = f.text_field :opening_time, class: "form-control"
  .field
    = f.label :closing_time
    = f.text_field :closing_time, class: "form-control"
  .field
    = f.label :regular_holiday
    = f.text_field :regular_holiday, class: "form-control"
  .field
    = f.label :opened_on
    = f.date_select :opened_on, class: "form-control"
  .field
    = f.label :closed_on
    = f.date_select :closed_on, class: "form-control", include_blank: true
  .field
    = f.label :near_station
    = f.text_area :near_station, class: "form-control"
  .field
    = f.label :spec
    = f.text_area :spec, class: "form-control"
  .field
    = f.label :position
    = f.number_field :position, class: "form-control"
  .field
    = f.label :facebook_uid
    = f.text_field :facebook_uid, class: "form-control"
  .field
    = f.label :twitter_uid
    = f.text_field :twitter_uid, class: "form-control"
  .actions
    = f.submit 'Save', class: "btn btn-primary"
