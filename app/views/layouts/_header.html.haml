%section#header.navbar.navbar-default(role="navigation")
  .container
    .navbar-header
      %a#logo.navbar-brand(href=root_path)= image_tag('layout/header/logo.png', alt: '株式会社ユア')
    .collapse.navbar-collapse#navbar-collapse
      %ul.nav.navbar-nav.navbar-right.ml30
        %span
          = link_to 'https://www.facebook.com/1596482943975074/', class: "btn btn-social-icon btn-facebook mt25", rel: :nofollow, target: :_blank do
            %span.fa.fa-facebook
        %span
          = link_to 'https://twitter.com/yourcorp', class: "btn btn-social-icon btn-twitter mt25", rel: :nofollow, target: :_blank do
            %span.fa.fa-twitter
        %span
          = link_to 'https://www.instagram.com/yourcorp/', class: "btn btn-social-icon btn-instagram mt25", rel: :nofollow, target: :_blank do
            %span.fa.fa-instagram

      %ul.nav.navbar-nav.navbar-right
        %li.mr50
          = link_to '会社概要', about_us_path
        %li.mr50
          = link_to '採用情報', recruits_path
        %li.mr50
          = link_to 'お問合せ', new_inquiry_path

    .text-right
      - if account_signed_in?
        logged in:
        = link_to current_account.nickname, profile_path
        = link_to "#{glyph 'log-out'}".html_safe, destroy_account_session_path, method: :delete
      - else
        = link_to "#{glyph 'log-in'} Log in".html_safe, new_account_session_path
