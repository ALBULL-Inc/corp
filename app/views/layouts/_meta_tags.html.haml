%meta{charset: 'UTF-8'}/
-viewport_content = "width=device-width,initial-scale=1.0"
-viewport_content << ",maximum-scale=1,user-scalable=no" if request.smart_phone?
%meta{name:"viewport", content:viewport_content}

= display_meta_tags site: t('site.name'), description: t('site.description'),
  og: { title: t('site.title'), url: root_url, type: "website", site_name: t('site.og_site_name'),
    image: asset_url('layout/header/logo.png') },
  reverse: true,
  twitter: {card: 'summary_large_image', site: t('sns.id.twitter')},
  canonical: @breadcrumbs.try(:last).try(:path) || root_url
%meta{property: 'fb:app_id', content: "#{Settings.auth.facebook.id}"}
