!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "CMS::Railly"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all", "data-turbolinks-track" => true
    = favicon_link_tag 'favicon.ico', rel: 'shortcut icon'
    = javascript_include_tag "intra", "data-turbolinks-track" => true

  %body
    .navbar.navbar-expand-lg.navbar-light.bg-light.pa0
      .container
        .navbar-header
          %button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbar-collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand(href=cms_root_path) Intra::Railly
        .collapse.navbar-collapse#navbar-collapse
          %ul.nav.navbar-nav
            %li.nav-item= link_to '打刻', intra_root_path, class: "nav-link"
            %li.nav-item= link_to '店舗一覧', intra_staffs_path, class: "nav-link"
            %li.nav-item= link_to 'スタッフ一覧', intra_staffs_path, class: "nav-link"

    .container

      .row
        .col-md-12
          - flash.each do |key, msg|
            - key = "success" if key == "notice"
            - key = "warning"  if key == "alert"
            = content_tag :div, msg.html_safe, class: "alert alert-#{key}"
          = yield
