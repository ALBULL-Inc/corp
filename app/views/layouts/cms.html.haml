!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "CMS::YourCorp"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all", "data-turbolinks-track" => true
    = favicon_link_tag 'favicon.ico', rel: 'shortcut icon'
    = javascript_include_tag "application", "data-turbolinks-track" => true

  %body
    .navbar.navbar-default(role="navigation")
      .container
        .navbar-header
          %button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navbar-collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand(href=cms_root_path) CMS::YourCorp
        .collapse.navbar-collapse#navbar-collapse
          %ul.nav.navbar-nav
            %li= link_to 'ブログ', cms_blogs_path
            %li= link_to 'トピックス', cms_topics_path
            %li= link_to '求人情報', cms_recruits_path
            %li= link_to '登録ユーザ', cms_accounts_path
            %li= link_to '園児マスタ', cms_children_path
            %li= link_to '組織マスタ', cms_organizations_path
            %li= link_to '施設マスタ', cms_places_path
            %li= link_to '利用登録', cms_usage_records_path

    .container

      .row
        .col-md-12
          = bootstrap_flash
          = yield
