  -#/main
  -# footer
  %footer.l-footer
    .l-footer__container.p-container
      %ul.l-footer__list
        %li
          = link_to 'プライバシーポリシー', policy_privacy_url
        %li
          = link_to '利用規約', terms_url
        %li
          = link_to '運営会社', about_us_url
        %li
          = link_to 'お問合せ', new_inquiry_url
