- content_for(:jsonld) do
  = jsonld_script_tag

.eye-catch.mb20
  .text-center.pt80.c-white
    %h1.mt0.mb40
      %ruby
        %rb.f50 Darts
        %rt.f14 ダーツ
      %ruby
        %rb.f50 Bar
        %rt.f14 バー
      %ruby
        %rb.f50 Railly
        %rt.f14 レイリー
    %p.lead
      ダーツするならレイリーで

.row
  .col-md-2
    .card
      = image_tag "thema.jpg", class: 'card-img-top', alt: ''
    .card-body
      .card-text
  .col-md-2
    .card
      = image_tag "drink.jpg", class: 'card-img-top', alt: ''
  .col-md-2
    .card
      = image_tag "whisky.jpg", class: 'card-img-top', alt: ''
  .col-md-2
    .card
      = image_tag "floor_a.jpg", class: 'card-img-top', alt: ''
  .col-md-2
    .card
      = image_tag "floor_b.jpg", class: 'card-img-top', alt: ''
  .col-md-2
    .card
      = image_tag "floor_c.jpg", class: 'card-img-top', alt: ''

%p.text-center
  <!-- 横長1-1 -->
  = render partial: 'common/adsense', locals: {slot_id: 4877223498, w: 728, h: 90}

.row.mb50
  .col-9
    .row
      .col-3
        %ul.list-menu
          %li= link_to "#{fa_icon 'home'} Darts Bar Railly".html_safe, root_path
      .col-9
        .card.mb30
          .card-header.f16 トピックス
          .card-body.pb0
            %ul.list-group.list-group-flush
              - @topics.each do |topic|
                %li.list-group-item
                  %span.card-link
                    =l topic.publish_at.to_date, format: :topic
                  %span.card-link
                    = link_to topic.title, topic
              %li.list-group-item.text-right
                = link_to 'more »', topics_path

    .row
      .col-3
        %ul.list-menu
          %li= link_to "#{fa_icon 'store-alt'} 店舗情報".html_safe, stores_path

      - @stores.each do |store|
        .col-9
          .card.mb30
            .card-header.f16= store.name
            .card-body.pb0
              %ul.list-group.list-group-flush
                %li.list-group-item
                  - if store.comming_soon?
                    Comming soon...
                  - else
                    #{fa_icon 'map-marker'}
                    = store.full_address
                    %br
                    #{fa_icon 'phone-square'}
                    = store.tel
                    %br
                    #{fa_icon 'clock'}
                    = store.opening_time
                    \-
                    = store.closing_time
                - unless store.comming_soon?
                  %li.list-group-item.text-right
                    = link_to 'more »', store


    .row
      .col-3
        %ul.list-menu
          %li= link_to "#{fa_icon 'book-open'} ブログ".html_safe, blogs_path

      .col-9
        .card.mb30
          .card-header.f16 #{fa_icon 'exclamation'} 新着#{Blog.model_name.human}
          .card-body.pb0
            %ul.list-group.list-group-flush
              - @blogs.each do |blog|
                %li.list-group-item
                  .f10
                    =l blog.publish_at
                  .card-link
                    = link_to blog.title, blog_path(blog)
              %li.list-group-item.text-right
                = link_to 'more »', blogs_path


  .col-3
    .row.mb20
      .col
        .card
          = link_to image_tag("p_banner.png", size: '260x260'), parties_path
    .row
      .col
        = link_to "Tweets by DartsBarRailly", "https://twitter.com/DartsBarRailly?ref_src=twsrc%5Etfw", class: "twitter-timeline", data: {width: 285, height: 750, dnt: false, chrome: "noheader nofooter"}
        %script{async: true, src: "https://platform.twitter.com/widgets.js", charset: "utf-8"}
