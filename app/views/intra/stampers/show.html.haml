.row
  .col-md-2
  .col-md-8
    %h1.mb20
      = @store.name
      打刻ページ

    %h3

    %table.table
      %tr
        %th= Staff.human_attribute_name :code
        %th= Staff.human_attribute_name :name
        %th
        %th
      - @staffs.each do |staff|
        %tr
          %td{style: "vertical-align: middle;"}
            = staff.code
          %td{style: "vertical-align: middle;"}
            %ruby
              %rb
                #{staff.last_name}
              %rt
                #{staff.last_kana}
            %ruby
              %rb
                #{staff.first_name}
              %rt
                #{staff.first_kana}
          %td{style: "text-align: right; width: 120px;"}
            = form_for @stamp, url: intra_stamper_path do |f|
              = f.hidden_field :store_id, value: @store.id
              = f.hidden_field :staff_id, value: staff.id
              = f.button "出勤", class: "btn btn-success pl30 pr30 stamping", data: {type: StampedType::WORKING_START}
              = l(@dailies[staff.id].work_start_at, format: :mdhm) if @dailies[staff.id]&.work_start_at

          %td{style: "text-align: right; width: 120px;"}
            = form_for @stamp, url: intra_stamper_path do |f|
              = f.hidden_field :store_id, value: @store.id
              = f.hidden_field :staff_id, value: staff.id
              = f.button "退勤", class: "btn btn-danger pl30 pr30 stamping", data: {type: StampedType::WORKING_END}
              = l(@dailies[staff.id].work_end_at, format: :mdhm) if @dailies[staff.id]&.work_end_at
