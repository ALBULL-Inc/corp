%h1 Listing workplaces

%table.table
  %thead
    %tr
      %th{style: "width: 50%;"} Name
      %th{colspan: 3}

  %tbody
    - @workplaces.each do |workplace|
      %tr
        %td= workplace.name
        %td= link_to '詳細', [:intra,workplace], class: "btn btn-success"
        %td= link_to '打刻ページ', intra_workplace_stamper_path(workplace), class: "btn btn-success"
        %td= link_to '店舗スタッフ一覧', intra_workplace_staffs_path(workplace), class: "btn btn-success"

