= form_for [:intra,@organization,@workplace] do |f|
  - if @workplace.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workplace.errors.count, "error")} prohibited this workplace from being saved:"
      %ul
        - @workplace.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :enable
    = f.check_box :enable
  .field
    = f.label :name
    = f.text_field :name, class: "form-control"
  .actions
    = f.submit 'Save', class: "btn btn-primary"
